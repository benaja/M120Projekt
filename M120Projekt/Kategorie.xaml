<UserControl x:Class="M120Projekt.Kategorie"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:M120Projekt"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid Name="passwoerter" AutoGenerateColumns="False" CanUserAddRows="false" SelectedCellsChanged="selectedCellsChanged">
            <DataGrid.Columns >
                <DataGridTextColumn Header="Zielsystem" Binding="{Binding Zielsystem}" />
                <DataGridTextColumn Header="Login" Binding="{Binding Login}" />

                <DataGridTemplateColumn Header="Login">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Show Password" ></Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
